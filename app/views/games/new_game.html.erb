<h1>New Game</h1>


<ul>
<% @random_letters.each do |letter|%>
<li> <%= letter %> </li>
<% end %>
</ul>


<form action='/score' method="post">
  <input id="text" type="text" name="word">
  <input id="btn" type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @random_letters %>
</form>


